<?xml version="1.0" encoding="UTF-8"?> <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ffyc.myfirstboot.dao.Dailyuseadvdao">
    <insert id="adddailyuseadv">
    INSERT INTO dailyuseadv(NAME,picture,TYPE)VALUES(#{name},#{picture},#{type})
    </insert>
    <update id="updatedail">
 UPDATE dailyuseadv SET NAME=#{name},picture=#{picture},type=#{type} where id=#{id}    </update>
    <delete id="deletedailyuseadv">
        delete from dailyuseadv where id=#{id}
    </delete>


    <select id="select" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv where type=0
    </select>
    <select id="select1" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv where type=1
    </select>
    <select id="select2" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv where type=2
    </select>
    <select id="select3" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv where type=3
    </select>
    <select id="select4" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv where type=4
    </select>
    <select id="Backdailyuseadv" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
         SELECT
         *
         FROM dailyuseadv
    </select>
    <select id="updatedailid" resultType="com.ffyc.myfirstboot.model.Dailyuseadv">
        SELECT * FROM dailyuseadv WHERE id=#{id}
    </select>
</mapper>
